<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Fuentes */
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Estilos generales para bordes redondeados y sombras */
        .rounded-lg { border-radius: 0.5rem; }
        .shadow-lg { box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); }
        .focus\:ring-blue-500:focus { box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5); }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Administrar Relaciones Profesor-Materia</h1>

        {{#errorMessage}}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error:</strong>
                <span class="block sm:inline">{{errorMessage}}</span>
            </div>
        {{/errorMessage}}

        {{#successMessage}}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Éxito:</strong>
                <span class="block sm:inline">{{successMessage}}</span>
            </div>
        {{/successMessage}}

        <form action="/admin/relate" method="POST" class="space-y-6">
            <!-- Sección para Buscar Docente -->
            <div class="border border-gray-200 p-4 rounded-md">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Buscar Docente</h2>
                <div>
                    <label for="teacherIdInput" class="block text-gray-700 text-sm font-medium mb-1">ID del Docente:</label>
                    <input type="number" id="teacherIdInput" name="teacherIdInput"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Ej: 1" value="{{teacherIdInput}}">
                </div>
                <div class="mt-4">
                    <button type="submit" name="action" value="searchTeacher"
                            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out">
                        Buscar Docente
                    </button>
                </div>
                {{#teacherName}}
                <div class="mt-4">
                    <label for="teacherNameDisplay" class="block text-gray-700 text-sm font-medium mb-1">Docente Encontrado:</label>
                    <input type="text" id="teacherNameDisplay"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md bg-gray-50 cursor-not-allowed"
                           value="{{teacherName}}" readonly>
                    <!-- Campo oculto para enviar el ID del docente seleccionado -->
                    <input type="hidden" name="selectedTeacherId" value="{{selectedTeacherId}}">
                </div>
                {{/teacherName}}
            </div>

            <!-- Sección para Buscar Materia -->
            <div class="border border-gray-200 p-4 rounded-md">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Buscar Materia</h2>
                <div>
                    <label for="subjectIdInput" class="block text-gray-700 text-sm font-medium mb-1">ID de la Materia:</label>
                    <input type="number" id="subjectIdInput" name="subjectIdInput"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Ej: 101" value="{{subjectIdInput}}">
                </div>
                <div class="mt-4">
                    <button type="submit" name="action" value="searchSubject"
                            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out">
                        Buscar Materia
                    </button>
                </div>
                {{#subjectName}}
                <div class="mt-4">
                    <label for="subjectNameDisplay" class="block text-gray-700 text-sm font-medium mb-1">Materia Encontrada:</label>
                    <input type="text" id="subjectNameDisplay"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md bg-gray-50 cursor-not-allowed"
                           value="{{subjectName}}" readonly>
                    <!-- Campo oculto para enviar el ID de la materia seleccionada -->
                    <input type="hidden" name="selectedSubjectId" value="{{selectedSubjectId}}">
                </div>
                {{/subjectName}}
            </div>

            <!-- Botón para Relacionar -->
            <button type="submit" name="action" value="relate"
                    class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-lg font-medium transition duration-150 ease-in-out">
                Relacionar Docente con Materia
            </button>
        </form>

        <div class="text-center mt-6">
            <a href="/dashboard" class="text-blue-600 hover:underline text-sm">Volver al Dashboard</a>
        </div>
    </div>
</body>
</html>